<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipe.NewRecipeFragment">



    <!-- TODO: Update blank fragment layout -->
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recipe Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recipe Name"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_recipe_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter recipe name"
                android:inputType="text" />

            <!-- Description -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter description"
                android:inputType="textMultiLine" />

            <!-- Number of Servings -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servings"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_num_servings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter number of servings"
                android:inputType="number" />

            <!-- Country of Origin -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter country"
                android:inputType="text" />

            <!-- Video URL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Video URL"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_video_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter video URL"
                android:inputType="textUri" />

            <!-- Thumbnail URL -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thumbnail URL"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_thumbnail_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter thumbnail URL"
                android:inputType="textUri" />

            <!-- Nutrition -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories"
                android:textSize="16sp"
                android:layout_marginTop="12dp" />

            <EditText
                android:id="@+id/et_calories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter calories"
                android:inputType="number" />

            <!-- Ingredients Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingredients"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />



            <Button
                android:id="@+id/btn_add_ingredient"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Ingredient"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />

            <!-- Instructions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />



            <Button
                android:id="@+id/btn_add_instruction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Instruction"
                android:layout_gravity="end"
                android:layout_marginTop="8dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Recipe"
                android:layout_marginTop="24dp" />

        </LinearLayout>

    </ScrollView>
</FrameLayout>